@using Umbraco.Cms.Web.Common.PublishedModels
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;

    SmidgeHelper.RequiresCss(new Smidge.Models.CssFile("~/css/core.css"));
    SmidgeHelper.RequiresJs(new Smidge.Models.JavaScriptFile("~/scripts/lib/jquery/jquery-3.6.3.min.js"));
    SmidgeHelper.RequiresJs(new Smidge.Models.JavaScriptFile("~/scripts/core.js"));

#if DEBUG
    var debugMode = true;
#else
    bool debugMode = false;
#endif
}
<!DOCTYPE html>
<html lang=ru>
<head>
    @Html.Partial("sysThemeSelector")
    <meta charset="utf-8">
    @await Umbraco.RenderMacroAsync("sysPageMetaInfo")
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    @await Html.PartialAsync("sysPageFavicon")

    <!-- Chrome, Firefox OS and Opera-->
    <meta name="theme-color" content="#000">
    <!-- Windows Phone-->
    <meta name="msapplication-navbutton-color" content="#000">
    <!-- iOS Safari-->
    <meta name="apple-mobile-web-app-status-bar-style" content="#000">
    @await SmidgeHelper.CssHereAsync(debug:debugMode)
    @await Html.PartialAsync("sysPageHeaderEnd")
</head>

<body class="oneScreen errorPage _accent _altColor">
    <main class="wrapper wrapper--onlychild">
        <div class="errorPage__container text">
            <h1 class="errorPage__title">404</h1>
            <div class="errorPage__content">
                <h2 class="errorPage__subtitle">Страница не найдена</h2>
                <p>
                    Cтраница, на которую вы пытаетесь попасть не существует или была удалена.<br/>
                    Перейдите на <a href="/">Главную страницу</a>
                </p>
            </div>
        </div>
    </main>
    @await SmidgeHelper.JsHereAsync(debug: debugMode)
</body>
</html>