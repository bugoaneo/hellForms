@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Web.Common.PublishedModels.PTexpTitleBtn>

<div class="publicationBlock">
    <div class="publicationBlock__container">
        @if (Model.HasValue("title"))
        {
            <h2 class="publicationBlock__title">@Html.Raw(Model.Title)</h2>
        }
        <div class="publicationBlock__content text">@Model.TextContent</div>

        @if (Model.HasValue("btn"))
        {
            <div class="publicationBlock__action">
                <a href="@Model.Btn?.Url" class="btn">@Model.Btn?.Name</a>
            </div>
        }
    </div>
</div>