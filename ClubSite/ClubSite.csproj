<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="wwwroot\css\theme-airdancemoscow\**" />
    <Compile Remove="wwwroot\scripts\theme-airdancemoscow\**" />
    <Content Remove="wwwroot\css\theme-airdancemoscow\**" />
    <Content Remove="wwwroot\scripts\theme-airdancemoscow\**" />
    <EmbeddedResource Remove="wwwroot\css\theme-airdancemoscow\**" />
    <EmbeddedResource Remove="wwwroot\scripts\theme-airdancemoscow\**" />
    <None Remove="wwwroot\css\theme-airdancemoscow\**" />
    <None Remove="wwwroot\scripts\theme-airdancemoscow\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="src\SportPriorityApiWrapper.cs" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="compilerconfig.json" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="src\ThemeSelectApi.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Include="compilerconfig.json" />
    <None Include="wwwroot\css\core-styles\_tiles.scss" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Our.Umbraco.UmbNav.Web" Version="2.0.4" />
    <PackageReference Include="Umbraco.Cms" Version="12.3.10" />
  </ItemGroup>

  <ItemGroup>
    <!-- Opt-in to app-local ICU to ensure consistent globalization APIs across different platforms -->
    <PackageReference Include="Microsoft.ICU.ICU4C.Runtime" Version="68.2.0.9" />
    <PackageReference Include="uSync" Version="11.0.1" />
    <!-- <ProjectReference Include="..\SportPriority.ClubSite.ApiClient\SportPriority.ClubSite.ApiClient.csproj" /> -->
    <RuntimeHostConfigurationOption Include="System.Globalization.AppLocalIcu" Value="68.2.0.9" Condition="$(RuntimeIdentifier.StartsWith('linux')) or $(RuntimeIdentifier.StartsWith('win')) or ('$(RuntimeIdentifier)' == '' and !$([MSBuild]::IsOSPlatform('osx')))" />
  </ItemGroup>

  <PropertyGroup>
    <!-- Razor files are needed for the backoffice to work correctly -->
    <CopyRazorGenerateFilesToPublishDirectory>true</CopyRazorGenerateFilesToPublishDirectory>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Remove RazorCompileOnBuild and RazorCompileOnPublish when not using ModelsMode InMemoryAuto -->
    <RazorCompileOnBuild>false</RazorCompileOnBuild>
    <RazorCompileOnPublish>false</RazorCompileOnPublish>
  </PropertyGroup>
  
</Project>
